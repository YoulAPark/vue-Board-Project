<?xml version="1.0" encoding="UTF-8" ?>
<!-- mapper DTD 선언  -->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "com.board.dao.BoardDao">
	
	<select id="getBoard" 	resultType="com.board.domain.BoardVO">
		SELECT
			* 
		FROM board
	</select>
	
	<select id="getProduct" resultType="com.board.domain.BoardVO" parameterType="int"> 
		SELECT
		*
		FROM
			board
		WHERE no = #{no}
	</select>
	
	<insert id="addBoard"	useGeneratedKeys="false">
		INSERT INTO
			board	( title, content, date, writer, imgFile, readCount )
		VALUES
					( #{title}, #{content}, now(), #{writer}, NULL, NULL )
	</insert>	
	
	<delete id="deleteBoard" parameterType="int">
		DELETE 
			FROM board 
		WHERE no = #{no}
	</delete>
	
	<update id="updateBoard" parameterType="int">
		UPDATE 
			board
		SET 
				title = #{title}
			,	content = #{content}
		WHERE no = #{no}
	</update>
	
	<!--
		[단 건 조회] 
		
	-->
	
	<!-- 
		[INSERT]
		INSERT INTO board 
			(title, content, date, writer, imgFile, readCount) 
		VALUES 
			(#{title}, #{content}, now(), #{writer}, NULL, NULL); 
	-->
	
	<!-- 
		[UPDATE]
		UPDATE board
		SET 
		title = #{title},
		content = #{content}
		WHERE no = #{no}
	 -->
	 
	 <!-- 
	 	[DELETE]
	 	DELETE FROM board WHERE no = #{no}
	 -->
	
</mapper>

<!--
	유의사항
	1. mapper id check
	2. parameter와 bean의 필드명 확인
	3. mapper파일 namespace 확인
	4. mapper의 namespace 중복되지 않았는지 확인
-->